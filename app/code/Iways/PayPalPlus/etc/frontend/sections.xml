<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Customer:etc/sections.xsd">
    <action name="rest/*/V1/carts/*/set-ppp-payment-information">
        <section name="cart"/>
        <section name="checkout-data"/>
    </action>
    <action name="rest/*/V1/guest-carts/*/set-ppp-payment-information">
        <section name="cart"/>
        <section name="checkout-data"/>
    </action>
    <action name="paypalplus/*/*">
        <section name="cart"/>
        <section name="checkout-data"/>
    </action>
    <action name="checkout/onepage/success">
        <section name="cart"/>
        <section name="checkout-data"/>
    </action>
</config>
